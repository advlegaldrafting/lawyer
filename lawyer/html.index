      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: none;
      border-radius: 5px;
    }
    form button {
      background: #fff;
      color: #003366;
      font-weight: bold;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    form button:hover {
      background: #dde6ff;
    }
    footer {
      text-align: center;
      padding: 15px;
      background: rgba(0,0,0,0.3);
      font-size: 14px;
    }
    a.whatsapp {
      color: #25d366;
      text-decoration: none;
      font-weight: bold;
    }
    a.whatsapp:hover { text-decoration: underline; }
