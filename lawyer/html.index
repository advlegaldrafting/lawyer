  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: "Segoe UI", Arial, sans-serif;
      background: linear-gradient(to bottom right, #002244, #0055aa);
      color: #fff;
      line-height: 1.6;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    header {
      background: rgba(0, 0, 0, 0.4);
      text-align: center;
      padding: 20px;
    }
    header img {
      height: 80px;
      width: auto;
      border-radius: 8px;
    }
    header h1 {
      font-size: 28px;
      margin-top: 10px;
    }
    header p {
      font-size: 16px;
      opacity: 0.8;
    }
    main {
      flex: 1;
      padding: 20px;
      max-width: 800px;
      margin: auto;
    }
    section {
      margin-bottom: 40px;
    }
    h2 {
      border-bottom: 2px solid #fff;
      display: inline-block;
      padding-bottom: 5px;
      margin-bottom: 15px;
    }
    .about {
      background: rgba(255,255,255,0.1);
      padding: 20px;
      border-radius: 8px;
    }
    .contact {
      background: rgba(255,255,255,0.15);
